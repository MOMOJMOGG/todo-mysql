{{>message}}
<form action="/todos/{{ todo.id }}?_method=PUT" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="isDone" {{#if todo.isDone }} checked {{/if}}>
      </div>
    </div>
    <input class="form-control" type="text" placeholder="name" name="name" value="{{ todo.name }}" maxlength="30"
      required>
    <div class="input-group-append">
      <button class="btn btn-success" type="submit">Save</button>
      <a href="/" type="button" class="btn btn-primary">Home</a>
    </div>
  </div>
</form>